<web-app>
    <display-name>click2profit</display-name>

    <filter>
        <filter-name>SparkFilter</filter-name>
        <filter-class>spark.servlet.SparkFilter</filter-class>
        <init-param>
            <param-name>applicationClass</param-name>
            <param-value>it.clicktoprofit.presentation.Resource</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SparkFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>it.clicktoprofit.presentation.ContextListener</listener-class>
    </listener>
</web-app>
